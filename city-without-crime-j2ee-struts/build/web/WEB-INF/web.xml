<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>authorisation</servlet-name>
        <servlet-class>Servlets.authorisation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userReport</servlet-name>
        <servlet-class>Servlets.userReport</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>criminalSearch</servlet-name>
        <servlet-class>Servlets.criminalSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>superDel</servlet-name>
        <servlet-class>Servlets.superDel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>superUp</servlet-name>
        <servlet-class>Servlets.superUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>superAd</servlet-name>
        <servlet-class>Servlets.superAd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>Servlets.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Servlets.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorisation</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userReport</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>criminalSearch</servlet-name>
        <url-pattern>/criminalSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>superAd</servlet-name>
        <url-pattern>/superAd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>superDel</servlet-name>
        <url-pattern>/superDel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>superUp</servlet-name>
        <url-pattern>/superUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
